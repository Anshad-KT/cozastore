	/* Shopping Cart Styles */

.cart {
  max-width: 800px;
  margin: 0 auto;
  padding: 20px;
  background-color: #fff;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.cart-header {
  text-align: center;
  margin-bottom: 20px;
}

.cart-items {
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  margin-bottom: 20px;
}

.cart-item {
  display: flex;
  padding: 20px 0;
}

.cart-item-image {
  width: 20%;
  min-width: 80px;
  margin-right: 20px;
}

.cart-item-image img {
  width: 100%;
}

.cart-item-details {
  flex: 1;
}

.cart-item-name {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 5px;
}

.cart-item-brand {
  font-size: 16px;
  margin-bottom: 5px;
}

.cart-item-size {
  font-size: 16px;
  margin-bottom: 5px;
}

.cart-item-price {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 10px;
}

.cart-item-actions {
  display: flex;
  align-items: center;
}

.cart-item-remove {
  background-color: #f44336;
  color: #fff;
  padding: 10px;
  border: none;
  border-radius: 5px;
  font-size: 16px;
  margin-right: 10px;
}

.cart-item-remove:hover {
  cursor: pointer;
  background-color: #d32f2f;
}

.cart-item-quantity {
  display: flex;
  align-items: center;
  border: 1px solid #eee;
  border-radius: 5px;
  margin-right: 10px;
  overflow: hidden;
}

.cart-item-decrement,
.cart-item-increment {
  background-color: #eee;
  border: none;
  padding: 10px;
  font-size: 16px;
}

.cart-item-decrement:hover,
.cart-item-increment:hover {
  cursor: pointer;
  background-color: #ddd;
}

.cart-item-quantity-value {
  padding: 10px;
  font-size: 16px;
}

.cart-total {
  text-align: right;
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
}

.cart-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.cart-clear,
.cart-checkout {
  background-color: #4caf50;
  color: #fff;
  padding: 10px 20px;
  border: none;
  border-radius: 5px;
  font-size: 16px;
}

.cart-clear:hover,
.cart-checkout:hover {
  cursor: pointer;
  background-color: #3e8e41;
}

</style>


