<!-- Shoping Cart -->

<div class="container mt-5">
	<div class="row mt-5">

		<div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
			<div class="m-l-25 m-r--38 m-lr-0-xl">
				<button
					class="btn-secondary mb-5 flex-c-m stext-101 cl0 size-116 bg10 bor14 hov-btn3 p-lr-15 trans-04 pointer">
					<a href="/products">
						<h6 class="text-dark">continue shopping</h6>
					</a>
				</button>
				
				<div class="wrap-table-shopping-cart mt-5">

					<table class="table-shopping-cart">
						<tr class="table_head">
							<th class="column-1">Product</th>
							<th class="column-2"></th>
							<th class="column-3">Price</th>
							<th class="column-4">Quantity</th>
							<th class="column-5">Total</th>
							<th class="column-5">Action</th>
						</tr>
						{{#each userdone}}
						<tr class="table_row">
							<td class="column-1">
								<div class="how-itemcart1">
									<img src="product-images/products/{{product.imageReference.[0]}}.jpg" alt="IMG">
								</div>
							</td>
							<td class="column-2">{{product.title}}</td>
							<td id="price1" class="column-3">{{product.price}}</td>
							<td class="column-4">
								<div id="mainId">
									{{#if product.st}}
									<h6>removed</h6>

									{{/if}}
									{{#if product.ot}}
									<h6>out of stock</h6>
									{{/if}}
									{{#if product.dt}}

									<div class="wrap-num-product flex-w m-l-auto m-r-0">
										<div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
											<button onclick="changeQuantity('{{_id}}','{{productId}}',-1)"><i
													class="fs-16 zmdi zmdi-minus"></i></button>
										</div>

										<input id="tot1" class="mtext-104 cl3 txt-center num-product" type="number"
											name="quantity" value={{quantity}}>

										<div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
											<button onclick="changeQuantity('{{_id}}','{{productId}}',1)"><i
													class="fs-16 zmdi zmdi-plus"></i></button>
										</div>
									</div>


									{{/if}}
									
								</div>
							</td>

							<td id="total1" class="column-5">
								{{total}}
							</td>
							<td class="column-5"><button class="btn btn-danger"><a
										href="/deletecart/?productId={{productId}}&quantity={{quantity}}&colour={{colour}}&size={{size}}">delete</a></button></a>
							</td>

						</tr>

						{{/each}}
					</table>
				</div>

				<div class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm">
					<div class="flex-w flex-m m-r-20 m-tb-5">
						<form action="/applyhelo" method="post">
							<input class="stext-104 cl2 plh4 size-117 bor13 p-lr-20 m-r-10 m-tb-5" type="text"
								id="couponform11" name="coupon" placeholder="Coupon Code">

							<div
								class="flex-c-m stext-101 cl2 size-118 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-5">
								<button type="submit">Apply coupon</button>
							</div>

						</form>
						{{#if appliedCoupon.validity}}

						<h5 class="ms-5 text-success mb-4">Coupon {{appliedCoupon.code}} is Active</h5>
						{{else}}
						<h5 class="ms-5 text-danger mb-4">{{couponErrorMsg}}</h5>
						{{/if}}
					</div>


					{{!-- <div
						class="flex-c-m stext-101 cl2 size-119 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-10">
						Update Cart
					</div> --}}
				</div>

			</div>
		</div>






















		<div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
			<div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
				<h4 class="mtext-109 cl2 p-b-30">
					Cart Totals
				</h4>

				<div class="flex-w flex-t bor12 p-b-13">
					<div class="size-208">
						<span class="stext-110 cl2">
							Subtotal:
						</span>
					</div>

					<div class="size-209">
						<span class="mtext-110 cl2">
							{{ghh}}
						</span>
					</div>
				</div>

				




				<div id="checkoutBt">
					{{#if userdone.bt}}
					<button class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer">
						<a href="/checkout">Proceed to Checkout</a>
					</button>
					{{else}}
					<h6 class="text-danger">Please update the Cart</h6>
					{{/if}}
				</div>


			</div>
			<br>
			<div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
				<h4 class="mtext-109 cl2 p-b-30">
					Wallet Totals
				</h4>

				<div class="flex-w flex-t bor12 p-b-13">
					<div class="size-208">
						<span class="stext-110 cl2">
							Amount:
						</span>
					</div>

					<div class="size-209">
						<span class="mtext-110 cl2">
							{{dbWallet}}
						</span>
					</div>
				</div>

				




				


			</div>
		</div>

	</div>
	
</div>





<!-- Footer -->
