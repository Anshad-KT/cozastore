<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>


<script>
	function changeQuantity(cartId, productId, count) {
		$.ajax({
			url: '/change-product-quantity',
			data: {
				cart: cartId,
				product: productId,
				count: count
			},
			method: 'POST',
			success: (responce) => {
				console.log(responce)

				const quantity = responce.quantity;
				const priceTag = document.getElementById('price1')
				const price = priceTag.innerHTML
				const total = price * quantity;
				const TotalTag = document.getElementById('total1')
				const inputTotal = document.getElementById('tot1')


				var dyValue = quantity
				console.log(dyValue)

				TotalTag.innerHTML = total
				const mainI = document.getElementById('mainId')
				if (quantity == 0) {

					mainI.innerHTML = "<h6>removed</h6>"
					document.getElementById('checkoutBt').innerHTML=`	<h6 class="text-danger">Please update the quantity</h6>`
				} else {
					var dyValue = quantity
					console.log(dyValue)
					mainI.innerHTML = `<div class="wrap-num-product flex-w m-l-auto m-r-0">
									<div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
										<button onclick="changeQuantity('${responce.cart}','${responce.productId}',-1)"><i
												class="fs-16 zmdi zmdi-minus"></i></button>
									</div>

									<input id="tot1" class="mtext-104 cl3 txt-center num-product" type="number" name="quantity" value=${dyValue}>

									<div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
										<button onclick="changeQuantity('${responce.cart}','${responce.productId}',1)"><i
												class="fs-16 zmdi zmdi-plus"></i></button>
									</div>
								</div>`
					document.getElementById('checkoutBt').innerHTML=`<button class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer">
						<a href="/checkout">Proceed to Checkout</a>
					</button>`
				}
			}


		})
	}
</script>


