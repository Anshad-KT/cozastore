<script>
	const otpForm = document.querySelector("form[name='otploginVerificationform']");
const otpInput = document.getElementById("otp");

otpForm.addEventListener("submit", function(event) {
    event.preventDefault();

    const otp = otpInput.value;

    // check if OTP is empty or not a 6-digit number
    if (otp === "" || !/^\d{6}$/.test(otp)) {
        document.getElementById("err").textContent = "Please enter a valid 6-digit OTP";
        return false;
    }

    // submit form if validation passes
    this.submit();
});

</script>
