            <div class="ecommerce-widget">


                <div class="row">
                    <!-- ============================================================== -->

                    <!-- ============================================================== -->

                    <!-- recent req.session.orders  -->
                    <!-- ============================================================== -->

                    <div class="col-xl-10 col-lg-10 col-md-10 col-sm-12 col-12">
                        <form action="/editbannerpost" method="post" role="form" enctype="multipart/form-data"
                            onsubmit="return brandValidate()" name="brandform">


                              {{#each bannerEdit}}
                                <div class="row">
                                    <div class="col-12 col-md-6 col-lg-6 mt-3">
                                        <label for="exampleFormControlSelect1">Title 1</label>
                                        <input id="price" value="{{product}}" type="text" class="form-control mb-4" name="category">
                                    </div>
                                    <div class="col-12 col-md-6 col-lg-6 mt-3">
                                        <label for="exampleFormControlSelect1">Title 2</label>
                                        <input id="price" value="{{category}}" type="text" class="form-control mb-4" name="product">
                                    </div>
                                </div>
                                <input type = "hidden" name = "hid" value = "{{_id}}">
                                {{/each}}



                                <div class="row">
                                    <div class="col-12 col-md-6 col-lg-6">
                                        <label for="exampleFormControlSelect1">upload images</label>

                                        <input class="mt-2" type="file" name="image" id="image">
                                    </div>

                                </div>




                                <div class="d-flex mt-5">
                                    <button type="submit" class="btn btn-dark text-right">
                                        Upload details
                                    </button>
                                </div>
                                <div id="error" class="d-flex justify-content-center">
                                    <a href="" id="error"></a>
                                </div>

                        </form>
                    </div>
                </div>


            </div>





        </div>

</div>    
